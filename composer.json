{
    "name": "mrpunyapal/rector-pest",
    "description": "Rector rules for PestPHP - Refactoring and best practices for Pest testing framework",
    "type": "rector-extension",
    "license": "MIT",
    "keywords": [
        "rector",
        "pest",
        "phpunit",
        "testing",
        "refactoring",
        "static-analysis"
    ],
    "authors": [
        {
            "name": "MrPunyapal"
        }
    ],
    "require": {
        "php": "^8.1",
        "rector/rector": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "MrPunyapal\\RectorPest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MrPunyapal\\RectorPest\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "rector": "rector process",
        "rector-dry": "rector process --dry-run"
    }
}
